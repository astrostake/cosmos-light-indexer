{
  "_comment": "Manual Upgrade Injection Example - Copy this file to manual-upgrades.json and modify as needed",
  "_instructions": [
    "1. Copy this file: cp manual-upgrades.example.json manual-upgrades.json",
    "2. Edit manual-upgrades.json with your upgrade details",
    "3. Run: node inject-manual-upgrades.js",
    "4. File will be auto-deleted after injection (archived as .bak)"
  ],
  
  "_field_descriptions": {
    "plan_name": "REQUIRED - Name of the upgrade (e.g. v1.0.0)",
    "target_height": "REQUIRED - Block height when upgrade will occur",
    "proposal_voting_start_time": "OPTIONAL - ISO 8601 timestamp (auto-uses current time if omitted)",
    "proposal_id": "OPTIONAL - Identifier for tracking (default: 'MANUAL')",
    "proposal_title": "OPTIONAL - Human readable description (default: same as plan_name)",
    "status": "OPTIONAL - 'scheduled' or 'completed' (default: 'scheduled')",
    "avg_block_time": "OPTIONAL - Average block time in seconds for ETA calculation (default: 6)"
  },

  "_examples": {
